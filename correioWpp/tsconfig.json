        "lib": [
            "es5",
            "es6"
        ],
        "baseUrl": "./src",
        "paths": {
          "*": ["*"]
        },
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
